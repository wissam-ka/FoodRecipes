
@using Microsoft.Ajax.Utilities
@model FoodRecipes.Models.Recipe

@{
    ViewBag.Title = "Edit";
   var pa = Model.ImgPath;
    var iden = 0;
}
<style>
    input {
        width: 100%;
        margin-bottom: 0.75em;
        background-color:  #BEBBBB;
    }
    input[type="file"] 
    {
        font-family: monospace;
        font-size: xx-large;
        background-color :#BEBBBB; 
    }
</style>
  <div style="margin-top: 2em">
        <ol class="breadcrumb">
            <li ><a href="@Url.Action("Index")">Home</a> <span class="glyphicon glyphicon-circle-arrow-right"></span></li>
            <li ><a href="@Url.Action("Search")" >search</a> <span class="glyphicon glyphicon-circle-arrow-right"></span></li>
            <li ><a href="@Url.Action("RecipeDetails","Recipe",new{id=Model.Id})">RecipeDetails</a> <span class="glyphicon glyphicon-circle-arrow-right"></span></li>
            <li class="active"><a href="#">Edit</a> <span class="glyphicon glyphicon-circle-arrow-right"></span></li>
        </ol>
    </div>
<div class="container" style="margin-top: 2em">
  
    <div class="col-lg-2 col-xs-2">
        <img  class="img-responsive borderimage pull-left" src="~/Images/siteimg/CookingTipsPage.jpg"  alt=""  />
    </div>
    <div class="createform col-lg-8 col-xs-8" style="border: 1px   solid">
        @using (Html.BeginForm("Edit", "Recipe", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)

            <fieldset>
                <legend style="text-align: center"><h1>Recipe</h1></legend>
                @Html.HiddenFor(mode=>mode.Id,Model.Id)
                <div class="editor-label">
                    @Html.LabelFor(model => model.Title)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.CookingTime)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.CookingTime)
                    @Html.ValidationMessageFor(model => model.CookingTime)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.PeopoleNumber)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.PeopoleNumber)
                    @Html.ValidationMessageFor(model => model.PeopoleNumber)
                </div>
                <div>
                    <div class="ingrediants">
                        <div class="ingEntry">
                            <table>
                       
                                @foreach (var item in Model.Ingredients)
                                {
                                    <tr>
                           
                                        <td>
                                   
                                            <input type="text" name="Ingredients[@iden].Name" value="@item.Name"/>
                                  
                                        </td>
                                        <td>
                                
                                            <input type="text" name="Ingredients[@iden].Amount" value="@item.Amount" />
                                        </td>
                                        <td>
                                    
                                            <input type="text" name="Ingredients[@iden].unit" value="@item.Unit" />
                                        </td>
                           
                                    </tr>
                                    iden = iden + 1;
                                }
                            </table>
                        </div>
          
                    </div>  
               
                </div>

                
                <div class="editor-label">
                    @Html.LabelFor(model => model.FoodPreparation)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.FoodPreparation, new { @class = "textarea" })
                    @Html.ValidationMessageFor(model => model.FoodPreparation)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.ImgPath)
                </div>
                <div>
                    <p>
                        
                        <img src="@Url.Content(pa)" width="75px" height="75px " alt=""/>
                        <input class="btn btn-default" type="file" id="file" name="file"  />
                    </p>
                    
                </div>
       
                

                <p>
                    <input type="submit" value="Edit" class="btn btn-danger btn-lg" style="margin-bottom: 1em" />
                </p>
            </fieldset>
        }
    </div>
    <div class="col-lg-2 col-xs-2">
        <img class="img-responsive borderimage pull-right" src="~/Images/siteimg/SV cooking picture.jpg" alt=""/>
    </div>
</div>